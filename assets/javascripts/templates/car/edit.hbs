{{#if model}}
  <h2>Редактирование автомобиля</h2>
  {{#each photo}}
  <div>
    <ul>
      <li>
        <img src="{{ this }}" data-photo-id="{{ @index }}" width="250">
        <input type="file" data-photo-id="{{ @index }}">
      </li>
    </ul>
  </div>
  {{/each}}

  <form id="car-form">
    <label for="model">
      <b>Модель: </b><input type="text" id="model" name="model" value="{{ model }}">
    </label>
    <br />
    <label for="price">
      <b>Цена: </b><input type="text" id="price" name="price" value="{{ price }}">
    </label>
    <br />
    <label for="year">
      <b>Год: </b><input type="text" id="year" name="year" value="{{ year }}">
    </label>
    <br />
    <label for="description">
      <b>Описание: </b><textarea type="text" id="description" name="description">{{ description }}</textarea>
    </label>
    <br />
    <button type="submit" id="create">Save</button>
  </form>

  <a class="btn btn-default link link-delete" data-model-id="{{ id }}" href="#">Delete</a>
{{else}}
  {{> preloader }}
{{/if}}
